@model IEnumerable<Product>
<div class="product-item-wrap row">
    @foreach (var product in Model)
    {
        <div class="col-xl-3 col-md-4 col-sm-6">
            <div class="product-item">
                <div class="product-img">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id">
                        <img class="primary-img"
                         src="~/assets/images/website-images//@product.ProductImages.FirstOrDefault(pi=>pi.Status==true)?.ImageUrl"
                         alt="Product Images" />
                        <img class="secondary-img"
                         src="~/assets/images/website-images//@product.ProductImages.FirstOrDefault(pi=>pi.Status==false)?.ImageUrl"
                         alt="Product Images" />
                    </a>
                    <div class="product-add-action">
                        <ul>
                            <li>
                                <a href="wishlist.html"
                               data-tippy="Add to wishlist"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder">
                                    <i class="pe-7s-like"></i>
                                </a>
                            </li>
                            <li class="quuickview-btn"
                            data-bs-toggle="modal"
                            data-bs-target="#quickModal">
                                <a asp-controller="Product" asp-action="GetDataById" asp-route-id="@product.Id"
                               data-tippy="Quickview"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder">
                                    <i class="pe-7s-look"></i>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Product" asp-action="AddBasket" asp-route-id="@product.Id"
                               data-tippy="Add to cart"
                               data-tippy-inertia="true"
                               data-tippy-animation="shift-away"
                               data-tippy-delay="50"
                               data-tippy-arrow="true"
                               data-tippy-theme="sharpborder">
                                    <i class="pe-7s-cart"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="product-content">
                    <a class="product-name" href="shop.html">@product.Name</a>
                    <div class="price-box pb-1">
                        <span class="new-price">$@product.SellPrice</span>
                    </div>
                    <div class="rating-box">
                        <ul>
                            @for (int i = 0; i < product.Raiting; i++)
                            {
                                <li><i class="fa fa-star"></i></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>