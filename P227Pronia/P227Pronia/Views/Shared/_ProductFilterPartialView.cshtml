@model IEnumerable<Product>
<div
                    class="tab-pane fade show active"
                    id="grid-view"
                    role="tabpanel"
                    aria-labelledby="grid-view-tab"
                  >
                    <div class="product-grid-view row g-y-20">
        @foreach (var product in Model)
        {
                                <div class="col-md-4 col-sm-6">
                                    <div class="product-item">
                                        <div class="product-img">
                                            <a>
                                            @foreach (var img in product.ProductImages.Where(pi => pi.Status != null))
                                            {
                                                <img class="@(img.Status==true?"primary-img":"secondary-img")"
                                                src="~/assets/images/website-images/@img.ImageUrl"
                                                alt="Product Images" />
                                            }
                                            </a>
                                            <div class="product-add-action">
                                                <ul>
                                                    <li>
                                                        <a href="wishlist.html"
                                                    data-tippy="Add to wishlist"
                                                    data-tippy-inertia="true"
                                                    data-tippy-animation="shift-away"
                                                    data-tippy-delay="50"
                                                    data-tippy-arrow="true"
                                                    data-tippy-theme="sharpborder">
                                                            <i class="pe-7s-like"></i>
                                                        </a>
                                                    </li>
                                                    <li class="quuickview-btn"
                                                data-bs-toggle="modal"
                                                data-bs-target="#quickModal">
                                                        <a href="#"
                                                    data-tippy="Quickview"
                                                    data-tippy-inertia="true"
                                                    data-tippy-animation="shift-away"
                                                    data-tippy-delay="50"
                                                    data-tippy-arrow="true"
                                                    data-tippy-theme="sharpborder">
                                                            <i class="pe-7s-look"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="cart.html"
                                                    data-tippy="Add to cart"
                                                    data-tippy-inertia="true"
                                                    data-tippy-animation="shift-away"
                                                    data-tippy-delay="50"
                                                    data-tippy-arrow="true"
                                                    data-tippy-theme="sharpborder">
                                                            <i class="pe-7s-cart"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <a class="product-name"
                                        href="single-product-variable.html">@product.Name</a>
                                            <div class="price-box pb-1">
                                                <span class="new-price">$@product.SellPrice</span>
                                            </div>
                                            <div class="rating-box">
                                                <ul>
                                                    @for (int i = 0; i < product.Raiting; i++)
                                                    {
                                                            <li><i class="fa fa-star"></i></li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
        }
                    </div>
                  </div>
<div
class="tab-pane fade"
id="list-view"
role="tabpanel"
aria-labelledby="list-view-tab"
>
<div class="product-list-view row g-y-30">
    @foreach (var product in Model)
    {
        <div class="col-12">
            <div class="product-item">
                <div class="product-img">
                    <a href="single-product-variable.html">
                        @foreach (var item in product.ProductImages.Where(p=>p.Status != null))
                        {
                            <img
                            class="@((item.Status == true)?"primary-img":"secondary-img")"
                            src="assets/images/website-images/@item.ImageUrl"
                            alt="Product Images"
                            />
                        }
                    </a>
                </div>
                <div class="product-content">
                <a
                    class="product-name"
                    href="single-product-variable.html"
                    >@product.Name</a
                >
                <div class="price-box pb-1">
                    <span class="new-price">$@product.SellPrice</span>
                </div>
                <div class="rating-box">
                            <ul>
                                @for (int i = 0; i < product.Raiting; i++)
                                {
                                    <li><i class="fa fa-star"></i></li>
                                }
                            </ul>
                </div>
                <p class="short-desc mb-0">
                    @product.Description
                </p>
                <div class="product-add-action">
                    <ul>
                    <li>
                        <a
                        href="wishlist.html"
                        data-tippy="Add to wishlist"
                        data-tippy-inertia="true"
                        data-tippy-animation="shift-away"
                        data-tippy-delay="50"
                        data-tippy-arrow="true"
                        data-tippy-theme="sharpborder"
                        >
                        <i class="pe-7s-like"></i>
                        </a>
                    </li>
                    <li
                        class="quuickview-btn"
                        data-bs-toggle="modal"
                        data-bs-target="#quickModal"
                    >
                        <a
                        href="#"
                        data-tippy="Quickview"
                        data-tippy-inertia="true"
                        data-tippy-animation="shift-away"
                        data-tippy-delay="50"
                        data-tippy-arrow="true"
                        data-tippy-theme="sharpborder"
                        >
                        <i class="pe-7s-look"></i>
                        </a>
                    </li>
                    <li>
                        <a
                        href="cart.html"
                        data-tippy="Add to cart"
                        data-tippy-inertia="true"
                        data-tippy-animation="shift-away"
                        data-tippy-delay="50"
                        data-tippy-arrow="true"
                        data-tippy-theme="sharpborder"
                        >
                        <i class="pe-7s-cart"></i>
                        </a>
                    </li>
                    </ul>
                </div>
                </div>
            </div>
        </div>
    }
</div>
</div>